{
    "name": "astro-blog",
    "private": true,
    "version": "4.2.0",
    "prettier": "@yutengjing/prettier-config",
    "packageManager": "pnpm@8.15.3",
    "lint-staged": {
        "**/src/content/blog/*.md": "tsx scripts/update-frontmatter-datetime.mts",
        "*.md": "autocorrect --fix",
        "**.md": "cspell lint",
        "***.md": "markdownlint",
        "*.{ts,tsx,md,json,astro}": "eslint --fix",
        "*.{js,jsx,ts,tsx,md,mdx,json,astro}": "prettier --write"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "scripts": {
        "prepare": "simple-git-hooks",
        "dev": "astro dev",
        "start": "astro dev",
        "build": "astro build && jampack ./dist",
        "preview": "astro preview",
        "sync": "astro sync",
        "lint": "pnpm run /^lint:/",
        "lint:tsc": "astro check",
        "lint:eslint": "eslint .",
        "lint:spell": "cspell lint src/**/*.md",
        "lint:typo": "autocorrect --lint src/**/*.md",
        "lint:md": "markdownlint 'src/**/*.md'",
        "lint:format": "prettier . --check",
        "fix:spell": "echo \"# New Words\" >> project-words.txt && cspell --words-only --unique \"**/*.md\" | sort --ignore-case >> project-words.txt",
        "fix:typo": "autocorrect --fix src/**/*.md",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@astrojs/rss": "^4.0.5",
        "@giscus/react": "^3.0.0",
        "@resvg/resvg-js": "^2.6.1",
        "astro": "^4.5.9",
        "clsx": "^2.1.0",
        "fuse.js": "^7.0.0",
        "github-slugger": "^2.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "remark-collapse": "^0.1.2",
        "remark-toc": "^9.0.0",
        "satori": "^0.10.13",
        "tailwindcss": "^3.4.1"
    },
    "devDependencies": {
        "@astrojs/check": "^0.5.10",
        "@astrojs/react": "^3.1.0",
        "@astrojs/sitemap": "^3.1.1",
        "@astrojs/tailwind": "^5.1.0",
        "@divriots/jampack": "^0.23.3",
        "@tailwindcss/typography": "^0.5.10",
        "@types/mdast": "^4.0.3",
        "@types/node": "^20.11.30",
        "@types/react": "^18.2.70",
        "@yutengjing/cspell-config": "^0.0.4",
        "@yutengjing/eslint-config-typescript": "^0.6.2",
        "@yutengjing/prettier-config": "^1.2.0",
        "astro-eslint-parser": "^0.16.3",
        "autocorrect-node": "^2.9.0",
        "cspell": "^8.6.1",
        "eslint": "^8.57.0",
        "eslint-define-config": "^2.1.0",
        "eslint-plugin-astro": "^0.33.1",
        "lint-staged": "^15.2.2",
        "markdownlint-cli": "^0.39.0",
        "mdast-util-to-string": "^4.0.0",
        "prettier": "^3.2.5",
        "prettier-plugin-astro": "^0.13.0",
        "prettier-plugin-tailwindcss": "^0.5.12",
        "reading-time": "^1.5.0",
        "simple-git-hooks": "^2.11.1",
        "typescript": "~5.4.3",
        "unified": "^11.0.4",
        "unist-util-visit": "^5.0.0",
        "vfile": "^6.0.1"
    }
}
