{
    "extends": "astro/tsconfigs/strict",
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.astro", "./*.ts", "./scripts/*.mts"],
    "compilerOptions": {
        "baseUrl": "src",
        "jsx": "react-jsx",
        "paths": {
            "@assets/*": ["assets/*"],
            "@config": ["config.ts"],
            "@components/*": ["components/*"],
            "@composables/*": ["composables/*"],
            "@content/*": ["content/*"],
            "@layouts/*": ["layouts/*"],
            "@pages/*": ["pages/*"],
            "@styles/*": ["styles/*"],
            "@utils/*": ["utils/*"]
        }
    }
}
